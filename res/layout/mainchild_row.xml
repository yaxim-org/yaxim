<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:gravity="center_vertical">

	<ImageView android:id="@+id/roster_icon"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginRight="4dp" android:longClickable="false"
		android:paddingLeft="15sp" />

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:minHeight="44dp" android:layout_gravity="center_vertical"
		android:gravity="center_vertical"
		android:paddingBottom="5dp" android:paddingTop="5dp">

		<TextView android:id="@+id/roster_screenname"
			android:paddingLeft="10dp" android:longClickable="false"
			android:textSize="20sp" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:singleLine="true" />

		<TextView android:id="@+id/roster_statusmsg"
			android:paddingLeft="10dp"
			android:textSize="13sp" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:singleLine="true"
			android:ellipsize="end" android:visibility="gone" 
			/>

	</LinearLayout>
</LinearLayout>
